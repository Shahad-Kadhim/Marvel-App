<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Marvel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">#F9F9F9</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="RatingBar">
        <item name="colorControlActivated">#DBA900</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="ButtonBack">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="elevation">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="layout_constraintVertical_bias">0</item>
    </style>


    <style name="SearchBarStyle">
        <item name="android:hint">@string/search</item>
        <item name="android:drawableStart">@drawable/ic_search_bar</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <string name="search">"search .. "</string>
    <dimen name="padding_small">8dp</dimen>
    <dimen name="text_default">14sp</dimen>
</resources>